<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardTasks"
    android:layout_margin="2dp"
    android:elevation="3dp"
    android:background="@drawable/rounded"
    android:padding="2dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/cardTasksIcon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/ic_tasks"
        android:backgroundTint="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/cardTasksName"
        android:layout_width="236dp"
        android:layout_height="25dp"
        android:textColor="@color/white"
        android:layout_marginTop="3dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/cardTasksIcon"
        android:layout_marginStart="16dp"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/cardTasksDate"
        android:layout_width="236dp"
        android:layout_height="35dp"
        android:textColor="@color/white"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/cardTasksName"
        app:layout_constraintLeft_toRightOf="@id/cardTasksIcon"
        />

    <ImageView
        android:id="@+id/cardTasksDelete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_delete"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/cardTasksEdit"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_edit"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/cardTasksDelete"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>