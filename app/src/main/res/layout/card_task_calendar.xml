<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardTasksKanban"
    android:layout_margin="2dp"
    android:elevation="3dp"
    android:background="@drawable/rounded"
    android:padding="2dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/cardTasksCalendarName"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="3dp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cardTasksCalendarHour"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/cardTasksCalendarName"
        app:layout_constraintTop_toBottomOf="@id/cardTasksCalendarName" />

    <TextView
        android:id="@+id/cardTasksCalendarSubject"
        android:layout_width="0dp"
        android:textAlignment="center"
        android:layout_height="25dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/cardTasksCalendarHour"
        app:layout_constraintStart_toStartOf="@+id/cardTasksCalendarHour"
        app:layout_constraintTop_toBottomOf="@id/cardTasksCalendarHour" />

    <TextView
        android:id="@+id/cardTasksCalendarDescription"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/cardTasksCalendarSubject"
        app:layout_constraintStart_toStartOf="@+id/cardTasksCalendarSubject"
        app:layout_constraintTop_toBottomOf="@+id/cardTasksCalendarSubject" />


</androidx.constraintlayout.widget.ConstraintLayout>